        version     = "0.2.1" >
	
	<!-- BBY261 Sözlük Uygulaması Ertuğrul Danacı -->
    <!-- Standart Uygulama Verileri -->

    <name>bby261.ertugruldanaci.sozluk</name>

    <description>
        Sözlük Uygulaması
    </description>

    <author href="http://yunus.hacettepe.edu.tr/~ertugrul.danaci" email="rtgrldnc@gmail.com">
        Ertuğrul Danacı
    </author>
        
    <!-- Derleme Platformu -->
        
    <gap:platform name="android" />
        
    <!-- Ek Özellikler -->

    <!-- <preference name="orientation" value="landscape" /> -->
    <preference name="fullscreen" value="false" />
    <preference name="orientation" value="portrait" />
        
    <!-- Açılış Ekranı ve İkon -->
     
    <icon src="icon.png" />
    <gap:splash src="splash.png" />
    <preference name="splash-screen-duration" value="2000"/>
        
    <!-- Uygulama Hakları -->
    
    <preference name="permissions" value="none"/>
        
</widget>